\newlength{\hshl@blocksep}
\newlength{\hshl@blockadjust}
\setlength{\hshl@blocksep}{0.75ex}
\setlength{\hshl@blockadjust}{0.25ex}
\providecommand{\hshl@strut}{%
  \vphantom{ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz()}%
}
\newcommand{\hshl@block}[1]{
  \par\vskip\medskipamount%
  \setlength{\parskip}{0pt}
  \ifbeamercolorempty[bg]{block title#1}{%
    \begin{beamercolorbox}[rightskip=0pt plus 4em]{block title#1}}{%
  \ifbeamercolorempty[bg]{block title}{%
    \begin{beamercolorbox}[rightskip=0pt plus 4em]{block title#1}%
  }%
  {%
    \begin{beamercolorbox}[
      sep=\dimexpr\hshl@blocksep-\hshl@blockadjust\relax,
      leftskip=\hshl@blockadjust,
      rightskip=\dimexpr\hshl@blockadjust plus 4em\relax
    ]{block title#1}%
  }}%
      \usebeamerfont*{block title#1}%
      \hshl@strut%
      \insertblocktitle%
      \hshl@strut%
  \end{beamercolorbox}%
  \nointerlineskip%
  \ifbeamercolorempty[bg]{block body#1}{%
    \begin{beamercolorbox}[vmode]{block body#1}}{
  \ifbeamercolorempty[bg]{block body}{%
    \begin{beamercolorbox}[vmode]{block body#1}%
  }{%
    \begin{beamercolorbox}[sep=\hshl@blocksep, vmode]{block body#1}%
    \vspace{-\hshl@parskip}
  }}%
      \usebeamerfont{block body#1}%
      \setlength{\parskip}{\hshl@parskip}%
}


