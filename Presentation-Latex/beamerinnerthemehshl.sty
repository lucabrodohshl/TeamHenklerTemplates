\setlength{\hshl@titleseparator@linewidth}{0.4pt}
\setbeamertemplate{title separator}{
  \tikzexternaldisable%
  \begin{tikzpicture}
    \fill[fg] (0,0) rectangle (\textwidth, \hshl@titleseparator@linewidth);
  \end{tikzpicture}%
  \tikzexternalenable%
  \par%
}
\setbeamertemplate{author}{
  \vspace*{2em}
 
  \if\insertemail\empty 
  \insertauthor%
  \else 
  \href{mailto:\insertemail}{ \insertauthor} 
  \fi
  \par%
  \vspace*{0.25em}
}
\setbeamertemplate{date}{
  \insertdate%
  \par%
}
\setbeamertemplate{institute}{
  \vspace*{3mm}
  \insertinstitute%
  \par%
}
\defbeamertemplate{section page}{simple}{
  \begin{center}
    \usebeamercolor[fg]{section title}
    \usebeamerfont{section title}
    \insertsectionhead\par
    \ifx\insertsubsectionhead\@empty\else
      \usebeamercolor[fg]{subsection title}
      \usebeamerfont{subsection title}
      \insertsubsectionhead
    \fi
  \end{center}
}
\defbeamertemplate{section page}{progressbar}{
  \centering
  \begin{minipage}{22em}
    \raggedright
    \usebeamercolor[fg]{section title}
    \usebeamerfont{section title}
    \insertsectionhead\\[-1ex]
    \usebeamertemplate*{progress bar in section page}
    \par
    \ifx\insertsubsectionhead\@empty\else%
      \usebeamercolor[fg]{subsection title}%
      \usebeamerfont{subsection title}%
      \insertsubsectionhead
    \fi
  \end{minipage}
  \par
  \vspace{\baselineskip}
}



\newcommand{\hshl@disablesectionpage}{
  \AtBeginSection{
    % intentionally empty
  }
}
\newcommand{\hshl@enablesectionpage}{
  \AtBeginSection{
    \ifbeamer@inframe
      \sectionpage
    \else
      \frame[plain,c,noframenumbering]{\sectionpage}
    \fi
  }
}

\newcommand{\hshl@disablesubsectionpage}{
  \AtBeginSubsection{
    % intentionally empty
  }
}
\newcommand{\hshl@enablesubsectionpage}{
  \AtBeginSubsection{
    \ifbeamer@inframe
      \subsectionpage
    \else
      \frame[plain,c,noframenumbering]{\subsectionpage}
    \fi
  }
}

\setbeamertemplate{subsection page}{%
  \usebeamertemplate*{section page}
}


\newlength{\hshl@progressonsectionpage}
\newlength{\hshl@progressonsectionpage@linewidth}
\setlength{\hshl@progressonsectionpage@linewidth}{0.4pt}
\setbeamertemplate{progress bar in section page}{
  \setlength{\hshl@progressonsectionpage}{%
    \textwidth * \ratio{\the\numexpr\insertframenumber+1\relax pt}{\inserttotalframenumber pt}%
  }%
  \tikzexternaldisable%
  \begin{tikzpicture}
    \fill[HSHLDarkBlue] (0,0) rectangle (\textwidth, \hshl@progressonsectionpage@linewidth);
    \fill[HSHLOrange] (0,0) rectangle (\hshl@progressonsectionpage, \hshl@progressonsectionpage@linewidth);
  \end{tikzpicture}%
  \tikzexternalenable%
}


