\newcommand{\makebib}[2][References]{
  \begingroup
    \setbeamertemplate{frametitle continuation}{} % Remove Roman numerals
    \begin{frame}[plain, noframenumbering, allowframebreaks]{#1} % Use #1 for the title
      \bibliographystyle{ieeetr}
      \bibliography{#2}
    \end{frame}
  \endgroup
}

\newcommand{\maketoc}[1][Table of Contents]{  % Default value: "Table of Contents"
    \begin{frame}[plain,noframenumbering]{#1}
        \tableofcontents
    \end{frame}
}

